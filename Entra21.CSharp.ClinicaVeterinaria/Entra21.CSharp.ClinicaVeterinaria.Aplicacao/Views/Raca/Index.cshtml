@model List<Raca>

<h1>Lista de Raças</h1>

<div class="row mb-2">
    <div class="text-end">
        <a asp-action="cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <!-- Cabeçalho da tabela-->
        <tr>
            <!-- Linha da tabela-->
            <th>Código</th><!-- Coluna específica do cabeçalho-->
            <th>Nome</th>
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <!-- Lugar dos registros da tabela-->
        @foreach (var raca in Model)
        {
            <tr>
                <!-- Linha -->
                <td>@raca.Id</td> <!-- Coluna específica para body-->
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>
                <td>
                    <a asp-action="editar" asp-route-id="@raca.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@raca.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>